<h1>Listing characters</h1>
<% if current_user.characters.present? %>
  <table>
  <tr>
    <th>Name</th>
    <th>Avatar</th>
    <th colspan="2"></th>
  </tr>

  <% @characters.each do |character| %>
    <tr>
      <td><%= character.name %></td>
      <td><%= character.avatar %></td>
      <td><%= link_to 'Show', character_path(character) %></td>
      <td><%= link_to 'Edit', edit_character_path(character) %></td>
      <td><%= link_to 'Destroy', character_path(character),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

<% else %>
    <p>You do not own any characters... <%= link_to 'Create one :)', new_character_path %></p>
<% end %>

  <%= link_to 'New character', new_character_path %>
  <%= link_to 'Back', root_path %>

